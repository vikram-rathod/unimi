<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.ProductDetailsActivity">
    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#ADD8E6"
            android:src="@drawable/logo" />

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="8dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/appbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/productName"
        android:gravity="center_horizontal"
        android:text="Product Name"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@id/productImage"
        android:layout_width="200dp"
        android:src="@drawable/e6"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="@drawable/card_back"
        app:layout_constraintTop_toBottomOf="@id/productName"
        app:layout_constraintStart_toStartOf="@id/productName"
        app:layout_constraintEnd_toEndOf="@id/productName"
        android:layout_height="200dp">

    </ImageView>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/productImagesBannerRecyclerView"-->

<!--        app:layout_constraintTop_toBottomOf="@id/productName"-->
<!--        app:layout_constraintStart_toStartOf="@id/productName"-->
<!--        app:layout_constraintEnd_toEndOf="@id/productName"-->

<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"/>-->

<!--    Price layout-->

    <LinearLayout
        android:id="@+id/priceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:weightSum="2"

        app:layout_constraintStart_toStartOf="@id/productImage"
        app:layout_constraintEnd_toEndOf="@id/productImage"
        app:layout_constraintTop_toBottomOf="@id/productImage"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="\u20B9 585"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:src="@drawable/baseline_favorite_24"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_gravity="end"

            android:layout_height="wrap_content">

        </ImageView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/addTocartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        app:layout_constraintStart_toStartOf="@id/priceLayout"
        app:layout_constraintEnd_toEndOf="@id/priceLayout"
        app:layout_constraintTop_toBottomOf="@id/priceLayout"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:gravity="center"
                android:background="@drawable/card_back"
                android:textColor="#4CAF50"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:textSize="20sp"
                /><TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:background="@drawable/card_back"
                android:textColor="#4CAF50"
                android:layout_weight="@integer/material_motion_duration_long_1"
            android:textSize="18sp"
                /><TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
                android:background="@drawable/card_back"
                android:textColor="#4CAF50"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:textSize="20sp"
            android:gravity="center"
             />
        </LinearLayout>


        <Button
            android:layout_gravity="end"
            android:text="Add to Cart"
            android:layout_marginStart="50dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:src="@drawable/baseline_favorite_24"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

        </Button>


    </LinearLayout>
<!--product details-->
    <LinearLayout
        android:id="@+id/productDetails"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:background="@color/card_background"
        app:layout_constraintStart_toStartOf="@id/addTocartLayout"
        app:layout_constraintEnd_toEndOf="@id/addTocartLayout"
        app:layout_constraintTop_toBottomOf="@+id/addTocartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:background="@color/selected_step_color"
            android:text="Product Details"
            android:textSize="16dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="Brand"
                android:textStyle="bold"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="eBMW"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout><LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="Quantity"
                android:textStyle="bold"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="2"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout><LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textStyle="bold"
                android:text="Speciality"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="No preservatives/chemical"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </LinearLayout>
<!--    Adddtional information-->
    <LinearLayout
        android:id="@+id/AddtionalInformation"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:background="@color/card_background"
        app:layout_constraintStart_toStartOf="@id/productDetails"
        app:layout_constraintEnd_toEndOf="@id/productDetails"
        app:layout_constraintTop_toBottomOf="@+id/productDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:background="@color/selected_step_color"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:text="Addtional Information"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="weight"
                android:textStyle="bold"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="500g"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="weight"
                android:textStyle="bold"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="500g"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/stockStatusLayout"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="@id/AddtionalInformation"
            app:layout_constraintEnd_toEndOf="@id/AddtionalInformation"

            app:layout_constraintTop_toBottomOf="@id/AddtionalInformation"
            android:layout_height="wrap_content">
            <TextView
                android:text="Stock Status"
                android:textSize="16sp"
                android:background="@color/selected_step_color"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Availability"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp">

                </TextView>
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="In Stock"
                    android:textColor="#4CAF50"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>