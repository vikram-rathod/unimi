<!-- res/drawable/arrow_indicator.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@android:color/black" android:gravity="center">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="rectangle"
                android:useLevel="false">
                <solid android:color="#5F2525"/>
            </shape>
        </rotate>
    </item>
</layer-list>
